        <script>
        function adaptSummaryToResolution() {
            const width = window.innerWidth;
            const height = window.innerHeight;
            const pixelRatio = window.devicePixelRatio || 1;
            const aspectRatio = (width / height).toFixed(2);

            console.log(`[No-Scroll Summary] ${width}x${height}, DPI: ${pixelRatio}x, Aspect: ${aspectRatio}`);

            // ÂãïÊÖãË™øÊï¥ÂÆπÂô®ÂØ¨Â∫¶
            const container = document.querySelector('.container');
            if (container) {
                if (width >= 3840) {
                    container.style.maxWidth = '70vw';
                } else if (width >= 2560) {
                    container.style.maxWidth = '75vw';
                } else if (width >= 1920) {
                    container.style.maxWidth = '80vw';
                } else if (width <= 1024) {
                    container.style.maxWidth = '95vw';
                }
            }

            // Ê†πÊìöËß£ÊûêÂ∫¶Ë™øÊï¥Áµ±Ë®àÂç°Áâá‰ΩàÂ±Ä
            const statsGrid = document.querySelector('.stats-grid');
            if (statsGrid) {
                if (width <= 480) {
                    statsGrid.style.gridTemplateColumns = '1fr 1fr';
                    statsGrid.style.gap = '8px';
                } else if (width <= 768) {
                    statsGrid.style.gridTemplateColumns = 'repeat(2, 1fr)';
                } else {
                    statsGrid.style.gridTemplateColumns = 'repeat(4, 1fr)';
                }
            }

            // Ë°®Ê†ºÊ¨Ñ‰ΩçÂØ¨Â∫¶ÂãïÊÖãË™øÊï¥ÔºàÁ¢∫‰øùÁÑ°Êç≤Ëª∏Ôºâ
            const table = document.querySelector('table');
            if (table) {
                const ths = table.querySelectorAll('th');
                const tds = table.querySelectorAll('td');

                if (width <= 480) {
                    // Ê•µÂ∞èËû¢ÂπïÔºöÂ£ìÁ∏ÆÊâÄÊúâÊ¨Ñ‰Ωç
                    if (ths[0]) ths[0].style.width = '15%';  // TC No.
                    if (ths[1]) ths[1].style.width = '45%';  // TC Name
                    if (ths[2]) ths[2].style.width = '20%';  // Checkpoints
                    if (ths[3]) ths[3].style.width = '20%';  // Result
                } else if (width <= 768) {
                    // ÊâãÊ©üÔºöÈÅ©‰∏≠Â£ìÁ∏Æ
                    if (ths[0]) ths[0].style.width = '12%';  // TC No.
                    if (ths[1]) ths[1].style.width = '50%';  // TC Name
                    if (ths[2]) ths[2].style.width = '18%';  // Checkpoints
                    if (ths[3]) ths[3].style.width = '20%';  // Result
                } else if (width <= 1024) {
                    // Â∞èËû¢ÂπïÔºöËºïÂæÆÂ£ìÁ∏Æ
                    if (ths[0]) ths[0].style.width = '10%';  // TC No.
                    if (ths[1]) ths[1].style.width = '55%';  // TC Name
                    if (ths[2]) ths[2].style.width = '17%';  // Checkpoints
                    if (ths[3]) ths[3].style.width = '18%';  // Result
                } else {
                    // Â§ßËû¢ÂπïÔºöËàíÈÅ©‰ΩàÂ±Ä
                    if (ths[0]) ths[0].style.width = '8%';   // TC No.
                    if (ths[1]) ths[1].style.width = '60%';  // TC Name
                    if (ths[2]) ths[2].style.width = '16%';  // Checkpoints
                    if (ths[3]) ths[3].style.width = '16%';  // Result
                }
            }

            // È´òDPIËû¢ÂπïÂÑ™Âåñ
            if (pixelRatio >= 2) {
                const elements = document.querySelectorAll('th, td, .stat-card');
                elements.forEach(el => {
                    if (el.tagName.toLowerCase() === 'th' || el.tagName.toLowerCase() === 'td') {
                        el.style.borderWidth = '0.5px';
                    } else {
                        el.style.borderWidth = '1.5px';
                    }
                });
            }

            // ÊïàËÉΩÂÑ™Âåñ
            const totalPixels = width * height;
            if (totalPixels < 1000000) {
                // ‰ΩéËß£ÊûêÂ∫¶Á∞°ÂåñÂãïÁï´
                const style = document.createElement('style');
                style.textContent = `
                    tbody tr:hover, .stat-card:hover { 
                        transform: none !important; 
                        transition: background-color 0.1s ease !important; 
                    }
                `;
                document.head.appendChild(style);
            } else if (totalPixels > 8000000) {
                // 4K+ Â¢ûÂº∑Ë¶ñË¶∫ÊïàÊûú
                const style = document.createElement('style');
                style.textContent = `
                    .container { 
                        box-shadow: 0 15px 40px rgba(0,0,0,0.2) !important; 
                    }
                    .stat-card:hover { 
                        transform: translateY(-4px) !important; 
                        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important; 
                    }
                    tbody tr:hover { 
                        transform: scale(1.003) !important; 
                    }
                `;
                document.head.appendChild(style);
            }

            // Ë∂ÖÂØ¨Ëû¢ÂπïÁâπÂà•ËôïÁêÜ
            if (aspectRatio >= 2.0) {
                if (statsGrid) {
                    statsGrid.style.gridTemplateColumns = 'repeat(4, 1fr)';
                    statsGrid.style.maxWidth = '80%';
                    statsGrid.style.margin = '0 auto';
                }
            }
        }

        // ÁßªÈô§Êï∏Â≠óÂãïÁï´ÊïàÊûú - Áõ¥Êé•È°ØÁ§∫ÁµêÊûú

        // Ê™¢Êü•ÊòØÂê¶ÈúÄË¶ÅË™øÊï¥Â≠óÈ´îÂ§ßÂ∞è‰ª•ÈÅøÂÖçÊèõË°å
        function optimizeTextFitting() {
            const tcNameCells = document.querySelectorAll('.tc-name');

            tcNameCells.forEach(cell => {
                // Â¶ÇÊûúÂÖßÂÆπÂ§™Èï∑ÔºåÂãïÊÖãË™øÊï¥Â≠óÈ´îÂ§ßÂ∞è
                const originalFontSize = window.getComputedStyle(cell).fontSize;
                const textLength = cell.textContent.length;

                if (textLength > 30 && window.innerWidth <= 768) {
                    cell.style.fontSize = 'clamp(9px, 2vw, 12px)';
                    cell.style.lineHeight = '1.2';
                } else if (textLength > 50 && window.innerWidth <= 1024) {
                    cell.style.fontSize = 'clamp(10px, 1.8vw, 13px)';
                    cell.style.lineHeight = '1.3';
                }
            });
        }

        // ÂàùÂßãÂåñ
        document.addEventListener('DOMContentLoaded', function() {
            adaptSummaryToResolution();
            optimizeTextFitting();

            console.log('[No-Scroll Summary Adapter] Initialized for', window.innerWidth + 'x' + window.innerHeight);
        });

        // Ë¶ñÁ™óÂ§ßÂ∞èÊîπËÆäÊôÇÊõ¥Êñ∞
        let summaryResizeTimeout;
        window.addEventListener('resize', function() {
            clearTimeout(summaryResizeTimeout);
            summaryResizeTimeout = setTimeout(() => {
                adaptSummaryToResolution();
                optimizeTextFitting();
            }, 100);
        });

        // ÊñπÂêëÊîπËÆäÊôÇÈáçÊñ∞Ë®àÁÆó
        window.addEventListener('orientationchange', function() {
            setTimeout(() => {
                adaptSummaryToResolution();
                optimizeTextFitting();
            }, 300);
        });
        </script>
        
        </body>
